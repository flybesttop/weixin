.card-list-box-index {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.ins-list-author-index {
  display: flex;
  height: 150rpx;
  padding: 20rpx;
  /* align-items: center; */
  background: #fff;
}

.text-truncate-index {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ins-list-li-index {
  width: 355rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
