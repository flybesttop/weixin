/* pages/store/store.wxss */

page {
  background: #f1f1f1;
}

.top-image {
  width: 100%;
  display: block;
  height: 300rpx;
  margin: 0;
  border-radius: 20rpx;
}

.store-head-img {
  margin-top: -30rpx;
  margin-left: 50rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 75rpx;
  background: white;
  overflow: hidden;
}

.like-store {
  text-align: center;
  font-size: 40rpx;
  height: 150rpx;
  margin-top: 15rpx;
  margin-right: 20rpx;
}

.like-store-red{
  color:red;
} 

.ins-list-li-index {
  width: 355rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.ins-list-author-index {
  display: flex;
  height: 150rpx;
  padding: 20rpx;
  /* align-items: center; */
  background: #fff;
}

.card-list-box-index {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.text-truncate-index {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
