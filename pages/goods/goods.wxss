/* pages/goods/goods.wxss */

page {
  background: #f1f1f1;
}

.swiper-screen {
  width: 96%;
  margin: 10rpx auto;
  height: 730rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-screen image {
  width: 100%;
  display: block;
  height: 730rpx;
  margin: 0;
}

.text-truncate-goods {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tripList_root {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
}

.text-truncate-goods {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-type-checked {
  border: 1rpx solid red;
  background: #f5f5f5;
  /* box-shadow: 0 0 8px #c0c0c0; */
  border-radius: 40rpx;
  color: red;
}

.goods-type-def {
  border: 1rpx solid #f5f5f5;
  background: #f5f5f5;
  border-radius: 40rpx;
}
